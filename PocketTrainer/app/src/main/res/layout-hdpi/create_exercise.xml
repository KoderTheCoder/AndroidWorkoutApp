<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:gravity="center"
    android:background="#363636"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise Name"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#898989"
        android:id="@+id/name"
        android:textColor="#FFFFFF"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repititons"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#898989"
        android:id="@+id/repititions"
        android:textColor="#FFFFFF"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time(seconds)"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#898989"
        android:id="@+id/time"
        android:textColor="#FFFFFF"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:text="NEXT"
        android:id="@+id/createExerciseNextButton"
        android:layout_marginTop="5dp"
        android:background="@drawable/homebutton"
        android:textColor="#ffffff"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:text="FINISH"
        android:id="@+id/finishWorkoutCreateButton"
        android:layout_marginTop="10dp"
        android:background="@drawable/homebutton"
        android:textColor="#ffffff"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:id="@+id/createExerciseNumber"
        />
</LinearLayout>